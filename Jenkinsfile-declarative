pipeline{
    agent {
        label 'agent1'
    }

    environment {
        project = "Test"
    }
    stages {
        stage('build'){
            steps{
                sh "sh untilloop.sh"
            }
        }
        stage('Array'){
            steps{
                sh "sh array"
            }
        }
    }
    post {
        success {
            echo "Success"
            sh 'mail -s "Success" mebiru2051@gmail.com'
        }
        failure {
            echo "Failed"
            sh 'mail -s "Failed" mebiru2051@gmail.com'
        }
        always {
            deleteDir()
        }
    }
}